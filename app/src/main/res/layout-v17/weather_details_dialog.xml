<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:layoutDirection="ltr">


    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="درجة الحرارة"
        android:textColor="@color/mainActivityTextColor"/>

    <TextView
        android:id="@+id/main_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/main_text"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>


    <ImageView
        android:id="@+id/weather_stats"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/main_temp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/humidity_dialog_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/weather_stats"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:paddingEnd="20dp"
        android:src="@drawable/humidity"/>


    <TextView
        android:id="@+id/humidity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/humidity_dialog_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="7dp"
        android:paddingEnd="20dp"
        android:text="الرطوبة"
        android:textSize="20sp"
        android:textColor="@color/mainActivityTextColor"/>

    <TextView
        android:id="@+id/humidity_in_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/humidity_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="7dp"
        android:paddingEnd="20dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp"/>




    <ImageView
        android:id="@+id/wind_dialog_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/weather_stats"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/wind"/>


    <TextView
        android:id="@+id/wind_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wind_dialog_icon"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:layout_marginStart="20dp"
        android:text="سرعة الرياح"
        android:textSize="20sp"
        android:textColor="@color/mainActivityTextColor"/>

    <TextView
        android:id="@+id/wind_speed_in_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wind_text"
        android:layout_marginTop="7dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:textColor="@android:color/black"/>

</RelativeLayout>