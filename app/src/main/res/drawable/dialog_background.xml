<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The bottom layer is red color rectangle with green border. -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="5dp"
                android:color="@android:color/white" />
            <padding
                android:left="1.5dp"
                android:top="1.5dp"
                android:right="1.5dp"
                android:bottom="1.5dp" />
        </shape>
    </item>
    <!-- The top layer is an image. -->
    <item android:drawable="@drawable/bg_dialog" />
</layer-list>